[flake8]
max-line-length = 127
max-complexity = 10
select = E,W,F,C
ignore = 
    E203,
    E501,
    W503,
    C901
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    tests/*:S101